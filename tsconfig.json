    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "templates",
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}